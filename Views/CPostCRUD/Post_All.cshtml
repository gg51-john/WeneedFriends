<section class="blog-content-area section-padding-0-100" style="padding-top:60px;">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Blog Posts Area -->
            <div class="col-12 col-lg-8">
                <div class="blog-posts-area">
                    <div class="row">

                        <!-- Section Heading -->
                        <div class="col-12">
                            <div class="section-heading">
                                <h2>尋找活動</h2>
                                <p>搜尋結果</p>
                            </div>
                        </div>
                        @{ int count = 0;}
                        @{
                            //for (int i = 1; i <= 6; i++)
                            foreach (var item in Model)
                            {
                                count++;
                                <div class="col-lg-6 col-md-12">
                                                            <div class="room-item" id="@count">
                                                                <a style="display:none">@Html.DisplayFor(modelitem => item.FPostId)</a>
                                                                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                                                                    <div class="carousel-inner">
                                                                        @{ bool b = true;}
                                                                        @foreach (var img in item.photo)
                                                                        {
                                                                                if (b == true)
                                                                                {
                                                                                    <div class="carousel-item active">
                                                                                        <img src="@Url.Content(img.FPostPhoto)" class="d-block w-100" alt="..." id="@img">
                                                                                    </div>
                                                                                    b = false;
                                                                                }
                                                                                else
                                                                                {
                                                                                    <div class="carousel-item ">
                                                                                        <img src="@Url.Content(img.FPostPhoto)" class="d-block w-100" alt="..." id="@img">
                                                                                    </div>
                                                                                }
                                                                        }
                                                                    </div>
                                                                </div>
                                                                <div class="ri-text">
                                                                    <h4>@Html.DisplayFor(modelitem => item.FTitle)</h4>
                                                                    <h3>@Html.DisplayFor(modelitem => item.FSportName)</h3>
                                                                    <table>
                                                                        <tbody>
                                                                            <tr>
                                                                                <td class="r-o"><i class="icon_calendar"></i>Date:</td>
                                                                                <td>@Html.DisplayFor(modelitem => item.FSystemTime)</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td class="r-o"><i class="icon_profile"></i>Person:</td>
                                                                                <td><span>@Html.DisplayFor(modelitem => item.joinpeople)</span>/@Html.DisplayFor(modelitem => item.FPeople)</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td class="r-o"><i class="icon_pin_alt"></i>Address:</td>
                                                                                <td>@Html.DisplayFor(modelitem => item.FPostCity)@Html.DisplayFor(modelitem => item.FPostDistrict)@Html.DisplayFor(modelitem => item.FPostAddress)</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td class="r-o"><i class="icon_clock_alt"></i>報名截止日:</td>
                                                                                <td><span>@Html.DisplayFor(modelitem => item.FPostTime)</span></td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                    <a asp-controller="CPostCRUD" asp-action="Post_Detail" class="primary-btn" id="@item.FPostId">More Details</a>
                                                                    <a asp-controller="CPostCRUD" asp-action="追蹤用" class="primary-btn" style="margin-left:10px">追蹤</a>
                                                                </div>
                                                            </div>
                                    </div> 
                            }
                        }
                    </div>
                    
                </div>

                <!-- Pager -->
                <ol class="nikki-pager">
                    <li><a href="#"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> 上一頁</a></li>
                    <li><a href="#">下一頁 <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                </ol>
            </div>

            <!-- Blog Sidebar Area -->
            <div class="col-12 col-sm-9 col-md-6 col-lg-4">
                <div class="post-sidebar-area">

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area mb-50">
                        <form class="search-form" action="#" method="post">
                            <input type="search" name="search" class="form-control" placeholder="搜尋...">
                            <button><i class="fa fa-send"></i></button>
                        </form>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area mb-30">
                        <div class="room-booking">
                            <h3>篩選條件</h3>
                            <form action="#">
                                <div class="check-date">
                                    <label for="date-in">Date to:</label>
                                    <input type="text" class="date-input" id="date-in">
                                    <i class="icon_calendar"></i>
                                </div>
                                <div class="check-date">
                                    <label for="date-out">Date From:</label>
                                    <input type="text" class="date-input" id="date-out">
                                    <i class="icon_calendar"></i>
                                </div>
                                <div class="select-option">
                                    <label for="guest">Category:</label>
                                    <select id="guest">
                                        <option value="">-</option>
                                        <option value="">游泳</option>
                                        <option value="">踏青</option>
                                    </select>
                                </div>
                                <div class="select-option">
                                    <label for="room">地區:</label>
                                    <select id="room">
                                        <option value="">-</option>
                                        <option value="">台北</option>
                                        <option value="">台中</option>
                                    </select>
                                </div>
                                <div class="select-option">
                                    <label for="room">Star:</label>
                                    <select id="room">
                                        <option value="">1</option>
                                        <option value="">2</option>
                                        <option value="">3</option>
                                        <option value="">4</option>
                                        <option value="">5</option>
                                    </select>
                                </div>
                                <button type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area mb-30" style="z-index:0">
                        <!-- Title -->
                        <div class="widget-title">
                            <h6>最新活動</h6>
                        </div>

                        <!-- Single Latest Posts -->
                        <div class="single-latest-post d-flex">
                            <div class="post-thumb">
                                <img src="/index/img/blog-img/lp1.jpg" alt="">
                            </div>
                            <div class="post-content">
                                <a href="#" class="post-title">
                                    <h6>活動名稱</h6>
                                </a>
                                <a href="#" class="post-author"> Category <span>date</span></a>
                            </div>
                        </div>

                        <!-- Single Latest Posts -->
                        <div class="single-latest-post d-flex">
                            <div class="post-thumb">
                                <img src="/index/img/blog-img/lp2.jpg" alt="">
                            </div>
                            <div class="post-content">
                                <a href="#" class="post-title">
                                    <h6>活動名稱</h6>
                                </a>
                                <a href="#" class="post-author"> Category <span>date</span></a>
                            </div>
                        </div>

                        <!-- Single Latest Posts -->
                        <div class="single-latest-post d-flex">
                            <div class="post-thumb">
                                <img src="/index/img/blog-img/lp3.jpg" alt="">
                            </div>
                            <div class="post-content">
                                <a href="#" class="post-title">
                                    <h6>活動名稱</h6>
                                </a>
                                <a href="#" class="post-author"> Category <span>date</span></a>
                            </div>
                        </div>

                        <!-- Single Latest Posts -->
                        <div class="single-latest-post d-flex">
                            <div class="post-thumb">
                                <img src="/index/img/blog-img/lp4.jpg" alt="">
                            </div>
                            <div class="post-content">
                                <a href="#" class="post-title">
                                    <h6>活動名稱</h6>
                                </a>
                                <a href="#" class="post-author"> Category <span>date</span></a>
                            </div>
                        </div>

                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area mb-30">
                        <!-- Title -->
                        <div class="widget-title">
                            <h6>未定功用</h6>
                        </div>
                        <ol class="nikki-archives">
                            <li><a href="#">施工中</a></li>
                        </ol>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area mb-30">
                        <!-- Title -->
                        <div class="widget-title">
                            <h6>熱門活動標籤</h6>
                        </div>
                        <!-- Tags -->
                        <ol class="popular-tags d-flex flex-wrap">
                            <li><a href="#">咖啡</a></li>
                            <li><a href="#">運動</a></li>
                            <li><a href="#">靜態</a></li>
                            <li><a href="#">打球</a></li>
                            <li><a href="#">早午餐</a></li>
                            <li><a href="#">狗狗</a></li>
                            <li><a href="#">統神端火鍋</a></li>
                            <li><a href="#">貓</a></li>
                            <li><a href="#">廢文</a></li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
