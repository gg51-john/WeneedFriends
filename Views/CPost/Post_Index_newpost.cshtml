@model IEnumerable<new_layout_core.ViewModel.Post.Post_ViewModel>

@{ if (Model == null) { return; } }
@foreach (var item in Model)
{
    <!-- Single Latest Posts -->
    <div class="single-latest-post d-flex">
        <div class="post-thumb">
            @{ if (item.tpostPhotos.Any())
                {
                    foreach (var it in item.tpostPhotos)
                    {
                        <a href="/CPost/Post_Detail/@item.tpost.FPostId"><img src="@it.FPostPhoto" alt="@item.tpost.FTitle"></a>
                    }

                }
                else
                {
                        <a href="/CPost/Post_Detail/@item.tpost.FPostId"><img src=".." alt="@item.tpost.FTitle"></a>
                }
            }
        </div>
        <div class="post-content">
            <a href="#" class="post-title">
                <h6>@Html.DisplayFor(modelItem => item.tpost.FTitle)</h6>
            </a>
            <a href="/CPost/Post_Detail/@item.tpost.FPostId" class="post-author"> @Html.DisplayFor(modelItem => item.tpost.FSportName) <span>@Html.DisplayFor(modelItem => item.tpost.FPostTime)</span></a>
        </div>
    </div>
}
