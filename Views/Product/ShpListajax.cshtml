@model IEnumerable<new_layout_core.ViewModel.tProductViewModel>

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="product__item sale">
            <div class="product__item__pic set-bg" data-setbg="@item.Pics.FirstOrDefault().FProductPicPath" style="background-image: url('@item.Pics.FirstOrDefault().FProductPicPath');">
                <ul class="product__hover">
                    <li><a href="@item.Pics.FirstOrDefault().FProductPicPath" class="image-popup"><span class="arrow_expand"></span></a></li>
                    <li><a onclick="AddToCart(@item.FProductId)"><span class="icon_bag_alt"></span></a></li>
                </ul>
            </div>
            <div class="product__item__text">
                <h6><a asp-controller="Shopping" asp-action="ShpSingle" asp-route-id="@item.FProductId">@item.FProductName</a></h6>
                <div class="product__price">$@item.FProductPrice</div>
            </div>
        </div>
    </div>
}
<div class="col-lg-12 text-center">
</div>

<script>
    function AddToCart(productid) {
        $.ajax({
            type: "post",
            url: "/Shopping/ShpCart",
            data: { id: productid },
            success: alert("已加入購物車"),
        });
    }
</script>
