<!-- ##### Contact Area Start ##### -->
<section class="contact-area section-padding-100-0">
    <div class="container">
            <div class="col-12 col-lg-6 centered">
                <div class="contact-content mb-100">
                    <h4 style="margin-bottom:15px;">會員註冊</h4>
                    <hr />
                    <!-- Contact Form Area -->
                    <div class="contact-form-area">
                        <form action="#" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-name" placeholder="會員帳號(Email)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-email" placeholder="會員密碼">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-email" placeholder="會員名稱">
                            </div>
                            <div class="form-group">
                                性別<br />
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                                    <label class="form-check-label" for="inlineRadio1">男</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                                    <label class="form-check-label" for="inlineRadio2">女</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-email" placeholder="會員地址">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-email" placeholder="出生年月日">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-phone" placeholder="會員手機">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="contact-phone" placeholder="居住城市">
                            </div>
                            <div class="form-group">
                                會員照片
                                <input type="file" class="form-control">
                            </div>

                            <br />
                            <br />
                            <a asp-action="Login" class="btn nikki-btn btn-sm m-2">確認</a>
                            <a asp-action="Login" class="btn nikki-btn btn-sm m-2">取消</a>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</section>
<!-- ##### Contact Area End ##### -->

